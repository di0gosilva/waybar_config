// -*- mode: jsonc -*-
{    // Waybar at    },
    // Waybar position (top|bottom|left|right)
    "position": "top",
    // Waybar layer (top|bottom)
    "layer": "bottom",
    "margin-top": 8,
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/weather",
        "clock",
        "mpris"
    ],
    "clock": {
        "timezone": "America/Sao_Paulo",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "mpris": {
        "player": "spotify",
        "format": "{status_icon} {title} - {artist}",
        "format-paused": "{player_icon} {status_icon}",
        "format-stopped": "",
        "player-icons": {
            "default": "üéµ",
            "spotify": "ÔÜº"
        },
        "status-icons": {
            "paused": "‚è∏",
            "playing": "‚ñ∂",
            "stopped": "‚èπ"
        },
        "ignored-players": ["google-chrome-stable", "chromium", "firefox", "brave"],
        "max-length": 25,
        "interval": 1,
        "on-click": "playerctl -p spotify play-pause ",
        "on-click-right": "playerctl -p spotify next",
        "on-scroll-up": "playerctl -p spotify previous",
        "on-scroll-down": "playerctl -p spotify next",
        "tooltip-format": "{title} - {artist}\nAlbum: {album}"
    },

    "custom/weather": {
        "format": "{}",
        "tooltip": true,
        "interval": 1800,
        "exec": "curl -s 'https://wttr.in/-27.6369,-48.6706?format=%t&m' | sed 's/+//g'",
        "return-type": "text",
        "on-click": "xdg-open https://wttr.in/Palho√ßa"
    },

    "modules-center": [
        "hyprland/workspaces"
    ],

    "modules-right": [
        "pulseaudio",
        "network",
        "backlight",
        "battery",
        "custom/power"       
    ],

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "Œª", 
            "2": "Œº", 
            "3": "œÄ", 
            "4": "œÉ", 
            "5": "œÑ",
            "active": "œÜ",
            "default": "‚óØ" // Default workspace icon
        },
        "persistent-workspaces": {
            "*": 5, // 5 workspaces by default on every monitor
            "HDMI-A-1": 3 // but only three on HDMI-A-1
        }
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        // "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
        "format-icons": ["Û∞õ©", "Û±©é", "Û±©è", "Û±©ê", "Û±©ë", "Û±©í", "Û±©ì", "Û±©î", "Û∞õ®"]
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-charging": "Ôóß {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´ {essid}",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "‚ö† Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}%",
        "format-bluetooth": "Ôäî{icon} {volume}%",
        "format-bluetooth-muted": "Ôö©",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    // Menu de energia
    "custom/power": {
        "format": "‚èª",
        "tooltip": "Menu de energia",
        "on-click": "wlogout",
        "on-click-right": "systemctl suspend"
    }
}



